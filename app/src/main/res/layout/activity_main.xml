<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.wisely.hellolibrary.MainActivity">

    <TextView
        android:id="@+id/info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <org.wisely.library.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher"
        app:civ_border_overlay="true"
        app:civ_border_width="3dp"
        app:civ_fill_color="@color/black_40" />

    <org.wisely.library.AnimationImageView
        android:id="@+id/ani_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_tv"
        app:aiv_animationlist="@drawable/wifi_animation"
        app:aiv_oneshot="false"
        app:aiv_runonshow="false" />

    <org.wisely.library.ClipImageView
        android:id="@+id/clip_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:civ_height="640"
        app:civ_src="@drawable/image_bak"
        app:civ_width="800" />

</RelativeLayout>
